generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// session store for Passport.js
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  email    String
  password String
}

// this will be expanded upon when Supabase is implemented!
model File {
  id       Int      @id @default(autoincrement())
  name     String
  date     DateTime @default(now())
  size     Int // In bytes, up to 2147483647 or 2.147483647 GBs
  folder   Folder   @relation(fields: [folderId], references: [id])
  folderId Int
}

model Folder {
  id    Int    @id @default(autoincrement())
  name  String
  files File[]
}
